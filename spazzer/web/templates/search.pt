<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal">
<head>
  <title></title>
	<link type="text/css" href="${request.application_url}/static/css/custom-theme/style.css" rel="stylesheet" />
	<link type="text/css" href="${request.application_url}/static/css/site.css" rel="stylesheet" />
	<script type="text/javascript" src="${request.application_url}/static/js/jquery-1.3.2.min.js"></script>
	<script type="text/javascript" src="${request.application_url}/static/js/jquery-ui-1.7.2.custom.min.js"></script>
<script type="text/javascript">
$(function(){
    $(".artist-item").each(function(idx){
      var content = $(this).find(".artist-content").hide();
      $(this).find(".artist-header").click(function(event){
          event.preventDefault();
          var link = $(event.target);
          var url = $(link).attr("href");
          if(!$(content).is(":visible")){
            $.get(url,function(data){
                        $(content).html(data);
                    }//end ajax callback
            );//end get
          }//end if not visible
          $(content).toggle();
      });//end click
    });//end each
   }//end show
  );//end tabs


</script>
</head>
<body>
  <div id="navigation">
    <ul>
      <li><a href="${context.get_url(request)}">Browse</a></li>
      <li><a href="${context.get_url(request)}search">Search</a></li>
      <li><a href="${request.application_url}/admin">Manage</a></li>
    </ul>
  </div>
    <div id="search">
      <form action="?POST" method="POST">
	<input type="text" name="criteria"/>
	<input type="submit" value="Search"/>
      </form>
    </div>
    <div id="results" class="ui-widget-content">
	<div id="artist-results" class="results">
	  <h2>Artists</h2>
	  <span tal:replace="structure artists"/>
	</div>
	<div id="album-results" class="results">
	  <h2>Albums</h2>
	  <span tal:replace="structure albums">Album</span>
	</div>
	<div id="track-results" class="results">
	  <h2>Tracks</h2>
	  <span tal:replace="structure tracks"/>
	</div>
    </div>
</body>
</html>
